<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">

  <!-- 필터 등록 -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>example.filter.CharacterEncodingFilter</filter-class>
    <!-- 필터에서 사용할 파라미터를 설정한다. -->
    <init-param> 
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
  <!-- Spring IoC 컨테이너를 준비하는 필터 
       단 이 필터는 클라이언트 요청과 무관하기 때문에 URL을 지정하지 않는다.
       즉 <filter-mapping> 태그를 설정하지 않는다.
  -->
  <filter>
    <filter-name>AppInitFilter</filter-name>
    <filter-class>example.filter.AppInitFilter</filter-class>
    <!-- Spring IoC 컨테이너를 위한 설정 파일의 위치나 파일명이 언제든지 
         변경될 수 있기 때문에 이렇게 외부 파일에 그 경로 정보를 두는 것이 좋다. -->
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>conf/application-context.xml</param-value>
    </init-param>
  </filter>
  
  <!-- 필터를 적용할 URL 지정 -->
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

</web-app>











