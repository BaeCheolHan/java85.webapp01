<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1"
  metadata-complete="false">

  <!-- 리스너가 사용할 파라미터 등록 
       이 파라미터는 글로벌 파라미터이다.
       즉 리스너 뿐만 아니라 필터나 서블릿도 사용할 수 있다.-->
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>conf/application-context.xml</param-value>
  </context-param>
  
  <!-- 리스너 등록 -->
  <listener>
    <listener-class>example.listener.ContextLoaderListener</listener-class>
  </listener>

  <!-- 필터 등록 -->
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>example.filter.CharacterEncodingFilter</filter-class>
    <!-- 필터에서 사용할 파라미터를 설정한다. -->
    <init-param> 
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  
  <!-- 필터를 적용할 URL 지정 -->
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

</web-app>











